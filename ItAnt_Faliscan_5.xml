                    </tei:app>
                    <tei:app from="#Fal_5_l_2_w_1">
                        <tei:lem corresp="#Fal_5_l_2_w_1">l[oc]i̦es <tei:ref target="http://zotero.org/groups/2552746/items/USHGF3E7"><tei:bibl>Giacomelli 1963</tei:bibl></tei:ref></tei:lem>
                        <tei:rdg corresp="#Fal_5_l_2_w_1">l̦--i̦e̦s <tei:ref target="http://zotero.org/groups/2552746/items/NJFZRK23"><tei:bibl>Vetter 1953</tei:bibl></tei:ref></tei:rdg>
                        <tei:rdg corresp="#Fal_5_l_2_w_1">ḷ[oc]i̦es <tei:ref target="http://zotero.org/groups/2552746/items/84FQ2UI4"><tei:bibl>Bakkum 2009</tei:bibl></tei:ref></tei:rdg>
                    </tei:app>
